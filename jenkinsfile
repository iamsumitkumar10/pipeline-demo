
pipeline {
    agent any
    tools{
        tool:'NodeJs'
    }

    environment {
        NODE_VERSION = "18"
    }

    stages {
        stage('Git Checkout') {
            steps {
                script {
                    
                    git url:"https://github.com/iamsumitkumar10/pipeline-demo.git",branch:"main"
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo "Installing dependencies..."
                    sh 'npm install'
                }
            }
        }
        stage('run project') {
            steps {
                script {
                    echo "Running project..."
                    sh "npm run dev"
                }
            }
        }

        stage('Build Project') {
            steps {
                script {
                    echo "Building project..."
                    sh 'npm run build'
                }
            }
        }

    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
