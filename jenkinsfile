pipeline{
    agent any
    tools{
        tool:'NodeJs'
    }

    environment {
        NODE_VERSION = "18"
    }
    stages{
        stage("checkout"){
            steps{
                script {
                    git url:"https://github.com/iamsumitkumar10/pipeline-demo.git",branch:"main"
                    echo "========checkout url of project========"
                }
                
                
            }
        }

        stage("dependencies install"){
            steps{
                echo "=====npm insatll======="
                sh 'npm install'
            }
        }

        stage("run project"){
            steps{
                echo "running project url here "
                sh 'npm run dev'
            }
        }

        stage("project build here"){
            steps{
                echo "project build "
                sh 'npm run build'
            }
        }
    }    



    post{
        always{
            echo "========default always========"
        }
        success{
            echo "========successfully ========"
        }
        failure{
            echo "======== failed========"
        }
    }
}